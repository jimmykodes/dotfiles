# vim:ft=zsh
local global=0
local version=3

while [[ "$1" =~ ^- && ! "$1" == "--" ]]; do case $1 in
-g | --global )
  global=1
  ;;
-v | --version )
  shift
  version=$1
  ;;
esac; shift; done
if [[ "$1" == '--' ]]; then shift; fi

if [[ $global != 0 ]]; then
  eval "python$version -m venv $venv/${1:-$(basename "$PWD")}"
else
  eval "python$version -m venv ${1:-venv}"
fi
